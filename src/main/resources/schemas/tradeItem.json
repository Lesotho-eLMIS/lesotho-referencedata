{
  "type": "object",
  "$schema": "http://json-schema.org/draft-04/schema",
  "title": "Trade Item",
  "description": "A single tradeItem",
  "properties": {
    "id": {
      "type": "string",
      "title": "id"
    },
    "orderables": {
      "type": "array",
      "title": "orderables",
      "items": {
        "type": "object",
        "$ref": "orderable.json"
      },
      "uniqueItems": true
    },
    "manufacturerOfTradeItem": {
      "type": "string",
      "title": "manufacturerOfTradeItem"
    },
    "classifications": {
      "type": "array",
      "title": "classifications",
      "items": {
        "type": "object",
        "$ref": "tradeItemClassification.json"
      }
    }
  },
  "required": [
    "orderables"
  ]
}