{
    "type": "object",
    "$schema": "http://json-schema.org/draft-03/schema",
    "title": "Collection",
    "description": "Paginated collection",
    "properties": {
        "content": {
            "type": "array",
            "items": { "type": "object", "$ref": "geographicZone.json" },
            "required": true
          },
          "totalPages": { "type": "integer", "title": "totalPages" , "required": true },
          "totalElements": { "type": "integer", "title": "totalElements", "required": true },
          "size": { "type": "integer", "title": "size", "required": true },
          "number": { "type": "integer", "title": "number", "required": true },
          "numberOfElements": { "type": "integer", "title": "numberOfElements", "required": true },
          "last": { "type": "boolean", "title": "last", "required": true },
          "first": { "type": "boolean", "title": "first", "required": true },
          "sort?": {
            "title": "sort",
              "type": "array",
              "items": { "type": "object" }
            }
    }
}
