{
  "type": "object",
  "$schema": "http://json-schema.org/draft-03/schema",
  "title": "User",
  "description": "A single user",
  "properties": {
    "id": {
      "type": "string",
      "title": "id"
    },
    "username": {
      "type": "string",
      "title": "username",
      "required": true
    },
    "firstName": {
      "type": "string",
      "title": "firstName",
      "required": true
    },
    "lastName": {
      "type": "string",
      "title": "lastName",
      "required": true
    },
    "email": {
      "type": "string",
      "title": "email",
      "required": true
    },
    "timezone": {
      "type": "string",
      "title": "timezone"
    },
    "homeFacility": {
      "type": "object",
      "$ref": "facility.json",
      "title": "homeFacility"
    },
    "verified": {
      "type": "boolean",
      "title": "verified",
      "required": true
    },
    "active": {
      "type": "boolean",
      "title": "active",
      "required": true
    },
    "loginRestricted": {
      "type": "boolean",
      "title": "loginRestricted",
      "required": true
    },
    "roleAssignments": {
      "type": "array",
      "title": "roleAssignments",
      "items": {
        "type": "object",
        "$ref": "roleAssignmentDto.json"
      },
      "uniqueItems": false
    },
    "extraData": {
      "type": "object",
      "title": "extraData"
    }
  }
}
